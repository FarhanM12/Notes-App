# Exclude external libraries and dependencies from language statistics
ios/** linguist-vendored
android/** linguist-vendored
build/** linguist-vendored
.dart_tool/** linguist-vendored
.pub-cache/** linguist-vendored
.flutter-plugins linguist-vendored
.flutter-plugins-dependencies linguist-vendored
.pub/** linguist-vendored

# Explicitly mark Dart files as Dart language
*.dart linguist-language=Dart

# Ensure important configuration files are included in language statistics
pubspec.yaml linguist-vendored=false
pubspec.lock linguist-vendored=false
android/** linguist-vendored=false

# Include screenshots
screenshots/** linguist-vendored=false
